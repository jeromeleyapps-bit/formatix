@model FormationManager.Models.Devis
@{
    ViewData["Title"] = "Nouveau devis";
}

<div class="card">
    <div class="card-body">
        <form asp-action="CreateDevis" method="post">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label asp-for="Numero" class="form-label">Numéro</label>
                <input asp-for="Numero" class="form-control" readonly />
            </div>
            <div class="mb-3">
                <label asp-for="ClientId" class="form-label">Client *</label>
                <select asp-for="ClientId" class="form-select" required asp-items="ViewBag.Clients">
                    <option value="">-- Sélectionner --</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="SessionId" class="form-label">Session (optionnel)</label>
                <select asp-for="SessionId" class="form-select" asp-items="ViewBag.Sessions">
                    <option value="">-- Aucune --</option>
                </select>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DateCreation" class="form-label">Date</label>
                    <input asp-for="DateCreation" type="date" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DateValidite" class="form-label">Valide jusqu'au</label>
                    <input asp-for="DateValidite" type="date" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Designation" class="form-label">Désignation</label>
                <textarea asp-for="Designation" class="form-control" rows="2"></textarea>
                <small class="text-muted">Laissez vide si lié à une session (formation utilisée).</small>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="MontantHT" class="form-label">Montant HT (€) *</label>
                    <input asp-for="MontantHT" type="number" step="0.01" class="form-control" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="TauxTVA" class="form-label">TVA (%)</label>
                    <input asp-for="TauxTVA" type="number" step="0.01" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Statut" class="form-label">Statut</label>
                <select asp-for="Statut" class="form-select">
                    <option value="Brouillon">Brouillon</option>
                    <option value="Envoyé">Envoyé</option>
                    <option value="Accepté">Accepté</option>
                    <option value="Refusé">Refusé</option>
                </select>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Créer</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>
