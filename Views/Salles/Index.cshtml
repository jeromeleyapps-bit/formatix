@model List<FormationManager.Models.Salle>
@{
    ViewData["Title"] = "Salles de formation";
    var siteNames = ViewBag.SiteNames as Dictionary<string, string> ?? new Dictionary<string, string>();
    var showSite = ViewBag.ShowSite as bool? ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Salles de formation</h4>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter une salle</a>
</div>

@if (TempData["Success"] != null)
{ <div class="alert alert-success alert-dismissible fade show"><span>@TempData["Success"]</span><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div> }
@if (TempData["Error"] != null)
{ <div class="alert alert-danger alert-dismissible fade show"><span>@TempData["Error"]</span><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div> }

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Capacité</th>
                        <th>Adresse</th>
                        @if (showSite) { <th>Site</th> }
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>@s.Nom</td>
                                <td>@(s.Capacite.HasValue ? s.Capacite.ToString() : "–")</td>
                                <td>@(string.IsNullOrWhiteSpace(s.Adresse) ? "–" : s.Adresse)</td>
                                @if (showSite) { <td>@(siteNames.GetValueOrDefault(s.SiteId ?? "", s.SiteId ?? ""))</td> }
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-outline-info"><i class="fas fa-eye"></i></a>
                                        <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-outline-primary"><i class="fas fa-edit"></i></a>
                                        <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-outline-danger"><i class="fas fa-trash"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="@(showSite ? 5 : 4)" class="text-center text-muted">Aucune salle. <a asp-action="Create">Créer une salle</a></td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
