@model FormationManager.Models.Salle
@{
    ViewData["Title"] = "Détail salle";
    var siteNames = ViewBag.SiteNames as Dictionary<string, string> ?? new Dictionary<string, string>();
    var showSite = ViewBag.ShowSite as bool? ?? false;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>@Model.Nom</h4>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fas fa-edit"></i> Modifier</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Supprimer</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nom</dt><dd class="col-sm-9">@Model.Nom</dd>
            <dt class="col-sm-3">Capacité</dt><dd class="col-sm-9">@(Model.Capacite.HasValue ? Model.Capacite + " personnes" : "–")</dd>
            <dt class="col-sm-3">Adresse</dt><dd class="col-sm-9">@(string.IsNullOrWhiteSpace(Model.Adresse) ? "–" : Model.Adresse)</dd>
            @if (showSite) { <dt class="col-sm-3">Site</dt><dd class="col-sm-9">@(siteNames.GetValueOrDefault(Model.SiteId ?? "", Model.SiteId ?? ""))</dd> }
        </dl>
    </div>
</div>

@if (Model.Sessions != null && Model.Sessions.Any())
{
    <div class="card mt-3">
        <div class="card-header">Sessions dans cette salle</div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                @foreach (var s in Model.Sessions.OrderBy(x => x.DateDebut))
                {
                    <li class="list-group-item d-flex justify-content-between">
                        <span>@(s.Formation?.Titre ?? "Session") — @s.DateDebut.ToString("dd/MM/yyyy") – @s.DateFin.ToString("dd/MM/yyyy")</span>
                        <a asp-controller="Sessions" asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-outline-primary">Voir</a>
                    </li>
                }
            </ul>
        </div>
    </div>
}

<div class="mt-3"><a asp-action="Index">← Retour à la liste</a></div>
