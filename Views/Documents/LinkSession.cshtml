@model FormationManager.Models.Document
@{
    ViewData["Title"] = "Lier le document à une session";
}

<div class="card">
    <div class="card-header">
        <h4 class="m-0">Lier le document à une session</h4>
    </div>
    <div class="card-body">
        <dl class="row mb-4">
            <dt class="col-sm-3">Document :</dt>
            <dd class="col-sm-9">
                <strong>@Model.NomFichier</strong>
                <span class="badge bg-secondary ms-2">@Model.TypeDocument</span>
            </dd>

            @if (Model.SessionId.HasValue)
            {
                <dt class="col-sm-3">Session actuelle :</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-success">
                        <i class="fas fa-link"></i> @Model.Session?.Formation?.Titre
                    </span>
                </dd>
            }
        </dl>

        <form asp-action="LinkSession" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label for="sessionId" class="form-label">Sélectionner une session :</label>
                <select name="sessionId" id="sessionId" class="form-select">
                    <option value="">-- Aucune session (délier) --</option>
                    @foreach (var session in (List<FormationManager.Models.Session>)ViewBag.Sessions)
                    {
                        <option value="@session.Id" selected="@(Model.SessionId == session.Id)">
                            @session.Formation?.Titre - @session.DateDebut.ToString("dd/MM/yyyy") au @session.DateFin.ToString("dd/MM/yyyy")
                        </option>
                    }
                </select>
                <small class="form-text text-muted">
                    Sélectionnez une session pour lier ce document. Cela permettra de créer des preuves Qualiopi automatiquement.
                </small>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-link"></i> Lier la session
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Annuler
                </a>
            </div>
        </form>
    </div>
</div>
