@model FormationManager.Models.Document
@{
    ViewData["Title"] = "Supprimer le document";
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h4 class="m-0">Supprimer le document</h4>
    </div>
    <div class="card-body">
        <h5 class="text-danger">Êtes-vous sûr de vouloir supprimer ce document ?</h5>
        <p class="text-muted">Cette action est irréversible. Le fichier et toutes les données associées seront supprimés.</p>

        <dl class="row mt-4">
            <dt class="col-sm-3">Type de document :</dt>
            <dd class="col-sm-9">@Model.TypeDocument</dd>

            <dt class="col-sm-3">Fichier :</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.NomFichier))
                {
                    <a href="@Model.CheminFichier" target="_blank">
                        <i class="fas fa-file-pdf"></i> @Model.NomFichier
                    </a>
                }
                else
                {
                    <span class="text-muted">-</span>
                }
            </dd>

            <dt class="col-sm-3">Statut :</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.StatutValidation == "Validé" ? "success" : Model.StatutValidation == "Rejeté" ? "danger" : "warning")">
                    @Model.StatutValidation
                </span>
            </dd>

            @if (Model.Session != null)
            {
                <dt class="col-sm-3">Session :</dt>
                <dd class="col-sm-9">@Model.Session.Formation?.Titre</dd>
            }

            <dt class="col-sm-3">Créé le :</dt>
            <dd class="col-sm-9">@Model.DateCreation.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Supprimer définitivement
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Annuler
                </a>
            </div>
        </form>
    </div>
</div>
