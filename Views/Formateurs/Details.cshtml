@model FormationManager.Models.Formateur
@{
    ViewData["Title"] = "Détails du formateur";
    var siteNames = ViewBag.SiteNames as Dictionary<string, string> ?? new Dictionary<string, string>();
    var showSite = ViewBag.ShowSite as bool? ?? false;
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5>@Model.Prenom @Model.Nom</h5>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                <i class="fas fa-edit"></i> Modifier
            </a>
            <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h6>Informations personnelles</h6>
                <table class="table table-sm">
                    <tr>
                        <th>Nom complet:</th>
                        <td>@Model.Prenom @Model.Nom</td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th>Téléphone:</th>
                        <td>@Model.Telephone</td>
                    </tr>
                    @if (Model.Utilisateur != null)
                    {
                        <tr>
                            <th>Compte utilisateur:</th>
                            <td>@Model.Utilisateur.Email (@Model.Utilisateur.Role)</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="col-md-6">
                <h6>Informations professionnelles</h6>
                <table class="table table-sm">
                    <tr>
                        <th>Statut professionnel:</th>
                        <td>@Model.StatutProfessionnel</td>
                    </tr>
                    <tr>
                        <th>Numéro formateur:</th>
                        <td>@Model.NumeroFormateur</td>
                    </tr>
                    <tr>
                        <th>Antenne:</th>
                        <td>@Model.AntenneRattachement</td>
                    </tr>
                    @if (showSite)
                    {
                        <tr>
                            <th>Site:</th>
                            <td>@(siteNames.ContainsKey(Model.SiteId ?? "") ? siteNames[Model.SiteId ?? ""] : Model.SiteId)</td>
                        </tr>
                    }
                    <tr>
                        <th>Statut:</th>
                        <td>
                            @if (Model.Actif)
                            {
                                <span class="badge bg-success">Actif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactif</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.Biographie))
        {
            <div class="mb-3">
                <h6>Biographie</h6>
                <p>@Model.Biographie</p>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Competences))
        {
            <div class="mb-3">
                <h6>Compétences</h6>
                <p>@Model.Competences</p>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Experience))
        {
            <div class="mb-3">
                <h6>Expérience</h6>
                <p>@Model.Experience</p>
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.Formations))
        {
            <div class="mb-3">
                <h6>Formations</h6>
                <p>@Model.Formations</p>
            </div>
        }

        <div class="mt-4">
            <h6>Sessions associées (@(Model.Sessions?.Count ?? 0))</h6>
            @if (Model.Sessions != null && Model.Sessions.Any())
            {
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Formation</th>
                                <th>Date début</th>
                                <th>Date fin</th>
                                <th>Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var session in Model.Sessions.OrderByDescending(s => s.DateDebut))
                            {
                                <tr>
                                    <td>@session.Formation?.Titre</td>
                                    <td>@session.DateDebut.ToString("dd/MM/yyyy")</td>
                                    <td>@session.DateFin.ToString("dd/MM/yyyy")</td>
                                    <td>@session.Statut</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">Aucune session associée</p>
            }
        </div>
    </div>
</div>
