@{
    ViewData["Title"] = "Guide Qualiopi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Guide Qualiopi</h2>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Retour
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="markdown-content">
            @Html.Raw(ViewBag.Guide?.Replace("\n", "<br/>").Replace("# ", "<h3>").Replace("## ", "<h4>").Replace("### ", "<h5>"))
        </div>
    </div>
</div>

<style>
    .markdown-content h3 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        color: #0d6efd;
        border-bottom: 2px solid #0d6efd;
        padding-bottom: 0.5rem;
    }
    .markdown-content h4 {
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        color: #495057;
    }
    .markdown-content h5 {
        margin-top: 1rem;
        margin-bottom: 0.5rem;
        color: #6c757d;
    }
    .markdown-content ul {
        margin-left: 2rem;
        margin-bottom: 1rem;
    }
    .markdown-content li {
        margin-bottom: 0.5rem;
    }
    .markdown-content strong {
        color: #0d6efd;
    }
</style>
