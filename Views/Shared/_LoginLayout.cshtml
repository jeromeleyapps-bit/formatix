@using Microsoft.AspNetCore.Identity
@using FormationManager.Models
@inject SignInManager<Utilisateur> SignInManager
@inject UserManager<Utilisateur> UserManager
@inject FormationManager.Services.IOrganizationService OrganizationService

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @OrganizationService.GetApplicationName()</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
        }
        .login-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }
        .brand-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px 15px 0 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="login-container">
                    <div class="brand-header text-center p-4">
                        <i class="fas fa-graduation-cap fa-3x mb-3"></i>
                        <h2>@OrganizationService.GetApplicationName()</h2>
                        <p class="mb-0">@OrganizationService.GetOrganizationName()</p>
                    </div>
                    
                    <div class="p-4">
                        @RenderBody()
                    </div>
                    
                    <div class="text-center p-3 text-muted">
                        <small>&copy; 2024 @OrganizationService.GetApplicationName() - @OrganizationService.GetOrganizationName(). Tous droits réservés.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
