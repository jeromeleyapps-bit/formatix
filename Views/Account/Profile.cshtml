@model FormationManager.Controllers.ProfileViewModel
@{
    ViewData["Title"] = "Mon Profil";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Informations personnelles</h4>
            </div>
            <div class="card-body">
                <form asp-action="Profile" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nom" class="form-label"></label>
                            <input asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Prenom" class="form-label"></label>
                            <input asp-for="Prenom" class="form-control" />
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" readonly />
                        <small class="text-muted">L'adresse email ne peut pas être modifiée</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telephone" class="form-label"></label>
                        <input asp-for="Telephone" class="form-control" />
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Biographie" class="form-label"></label>
                        <textarea asp-for="Biographie" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Biographie" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Competences" class="form-label"></label>
                        <textarea asp-for="Competences" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Competences" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Experience" class="form-label"></label>
                        <textarea asp-for="Experience" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Experience" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Formations" class="form-label"></label>
                        <textarea asp-for="Formations" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Formations" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Enregistrer
                        </button>
                        <a asp-action="ChangePassword" class="btn btn-outline-secondary">
                            <i class="fas fa-key me-2"></i>Changer le mot de passe
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Actions rapides</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="ChangePassword" class="btn btn-outline-primary">
                        <i class="fas fa-key me-2"></i>Changer le mot de passe
                    </a>
                    <a href="#" class="btn btn-outline-info">
                        <i class="fas fa-download me-2"></i>Télécharger mes données
                    </a>
                    <a href="#" class="btn btn-outline-warning">
                        <i class="fas fa-history me-2"></i>Historique des connexions
                    </a>
                </div>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
