@model IEnumerable<FormationManager.Models.Formation>
@{
    ViewData["Title"] = "Formations";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Catalogue des Formations</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nouvelle Formation
    </a>
</div>

<div class="card mb-4">
    <div class="card-body d-flex flex-wrap gap-2">
        <a asp-controller="Sessions" asp-action="Create" class="btn btn-outline-primary">
            <i class="fas fa-calendar-plus"></i> Nouvelle session
        </a>
        <a asp-action="ExportCataloguePDF" class="btn btn-success">
            <i class="fas fa-file-pdf"></i> Exporter le catalogue PDF
        </a>
        <a asp-controller="Documents" asp-action="Index" asp-fragment="examples" class="btn btn-outline-secondary">
            <i class="fas fa-file-alt"></i> Exemples de documents
        </a>
        <a asp-controller="Documents" asp-action="Upload" class="btn btn-outline-secondary">
            <i class="fas fa-upload"></i> Importer un PDF
        </a>
    </div>
</div>

<div class="row">
    @foreach (var formation in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-2">
                        <h5 class="mb-0">@formation.Titre</h5>
                        @if (ViewBag.ShowSite == true)
                        {
                            var siteNames = ViewBag.SiteNames as Dictionary<string, string>;
                            var siteLabel = siteNames != null && siteNames.ContainsKey(formation.SiteId)
                                ? siteNames[formation.SiteId]
                                : formation.SiteId;
                            <span class="badge bg-secondary">@siteLabel</span>
                        }
                    </div>
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Edit" asp-route-id="@formation.Id" class="btn btn-outline-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@formation.Id" class="btn btn-outline-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-text">@formation.Description</p>
                    
                    <div class="row text-center">
                        <div class="col-4">
                            <small class="text-muted">Durée</small>
                            <div class="fw-bold">@formation.DureeHeures h</div>
                        </div>
                        <div class="col-4">
                            <small class="text-muted">Prix</small>
                            <div class="fw-bold">@(formation.PrixIndicatif.ToString("N2")) €</div>
                        </div>
                        <div class="col-4">
                            <small class="text-muted">Sessions</small>
                            <div class="fw-bold">@(formation.Sessions?.Count ?? 0)</div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="Details" asp-route-id="@formation.Id" class="btn btn-outline-primary w-100">
                        Voir les détails
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-graduation-cap fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">Aucune formation</h4>
        <p class="text-muted">Commencez par créer votre première formation.</p>
        <a asp-action="Create" class="btn btn-primary">Créer une formation</a>
    </div>
}
