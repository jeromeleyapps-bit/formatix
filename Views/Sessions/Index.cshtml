@model IEnumerable<FormationManager.Models.Session>
@{
    ViewData["Title"] = "Sessions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Sessions</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nouvelle session
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">Sessions</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                <tr>
                    @if (ViewBag.ShowSite == true)
                    {
                        <th>Site</th>
                    }
                    <th>Formation</th>
                    <th>Dates</th>
                    <th>Lieu</th>
                    <th>Formateur</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var session in Model)
                {
                    <tr>
                        @if (ViewBag.ShowSite == true)
                        {
                            var siteNames = ViewBag.SiteNames as Dictionary<string, string>;
                            var siteLabel = siteNames != null && siteNames.ContainsKey(session.SiteId)
                                ? siteNames[session.SiteId]
                                : session.SiteId;
                            <td>@siteLabel</td>
                        }
                        <td>@session.Formation?.Titre</td>
                        <td>@session.DateDebut.ToString("dd/MM/yyyy") - @session.DateFin.ToString("dd/MM/yyyy")</td>
                        <td>@session.Lieu</td>
                        <td>@session.Formateur?.Nom @session.Formateur?.Prenom</td>
                        <td>@session.Statut</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@session.Id" class="btn btn-outline-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@session.Id" class="btn btn-outline-secondary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@session.Id" class="btn btn-outline-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
