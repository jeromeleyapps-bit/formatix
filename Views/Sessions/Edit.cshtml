@model FormationManager.Models.Session
@{
    ViewData["Title"] = "Modifier la session";
}

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            @if (ViewBag.Sites != null)
            {
                <div class="mb-3">
                    <label class="form-label">Site</label>
                    <select asp-for="SiteId" class="form-select"
                            asp-items="@(new SelectList(ViewBag.Sites, "SiteId", "Name"))">
                    </select>
                </div>
            }
            <div class="mb-3">
                <label class="form-label">Formation</label>
                <select asp-for="FormationId" class="form-select"
                        asp-items="@(new SelectList(ViewBag.Formations, "Id", "Titre"))">
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Formateur</label>
                @if (ViewBag.Formateurs != null && ((List<FormationManager.Models.Formateur>)ViewBag.Formateurs).Count > 0)
                {
                    <select asp-for="FormateurId" class="form-select">
                        <option value="">-- Sélectionner un formateur --</option>
                        @foreach (var formateur in (List<FormationManager.Models.Formateur>)ViewBag.Formateurs)
                        {
                            var displayName = $"{formateur.Prenom} {formateur.Nom}";
                            if (!string.IsNullOrWhiteSpace(formateur.Email))
                            {
                                displayName += $" ({formateur.Email})";
                            }
                            if (!string.IsNullOrWhiteSpace(formateur.NumeroFormateur))
                            {
                                displayName += $" - N°{formateur.NumeroFormateur}";
                            }
                            <option value="@formateur.Id" selected="@(Model.FormateurId == formateur.Id)">@displayName</option>
                        }
                    </select>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> Aucun formateur disponible. 
                        <a href="/Formateurs/Create" class="alert-link">Créer un formateur</a>
                    </div>
                }
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="DateDebut" class="form-label"></label>
                    <input asp-for="DateDebut" type="date" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DateFin" class="form-label"></label>
                    <input asp-for="DateFin" type="date" class="form-control" />
                </div>
            </div>
            @if (ViewBag.Salles != null && (ViewBag.Salles as IEnumerable<FormationManager.Models.Salle>)?.Any() == true)
            {
                <div class="mb-3">
                    <label class="form-label">Salle</label>
                    <select asp-for="SalleId" class="form-select">
                        <option value="">-- Aucune --</option>
                        @foreach (var s in (IEnumerable<FormationManager.Models.Salle>)ViewBag.Salles)
                        {
                            <option value="@s.Id" selected="@(Model.SalleId == s.Id)">@s.Nom@(s.Capacite.HasValue ? $" ({s.Capacite} pl.)" : "")</option>
                        }
                    </select>
                </div>
            }
            <div class="mb-3">
                <label asp-for="Lieu" class="form-label">Lieu @(ViewBag.Salles != null && (ViewBag.Salles as IEnumerable<FormationManager.Models.Salle>)?.Any() == true ? "(ou complément)" : "")</label>
                <input asp-for="Lieu" class="form-control" />
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Statut" class="form-label">Statut</label>
                    <select asp-for="Statut" class="form-select">
                        <option value="Programmée">Programmée</option>
                        <option value="En cours">En cours</option>
                        <option value="Terminée">Terminée</option>
                        <option value="Annulée">Annulée</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="NombreMaxStagiaires" class="form-label"></label>
                    <input asp-for="NombreMaxStagiaires" class="form-control" />
                </div>
            </div>
            <div class="form-check mb-3">
                <input asp-for="EstPublique" class="form-check-input" />
                <label asp-for="EstPublique" class="form-check-label"></label>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>
