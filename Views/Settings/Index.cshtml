@model FormationManager.Models.SettingsViewModel
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment WebHostEnvironment
@{
    ViewData["Title"] = "Paramètres";
    var siteNames = ViewBag.SiteNames as Dictionary<string, string> ?? new Dictionary<string, string>();
    var logoPath = System.IO.Path.Combine(WebHostEnvironment.WebRootPath, "uploads", "logo.png");
    var logoPathJpg = System.IO.Path.Combine(WebHostEnvironment.WebRootPath, "uploads", "logo.jpg");
    var hasLogo = System.IO.File.Exists(logoPath) || System.IO.File.Exists(logoPathJpg);
    var logoUrl = hasLogo ? "/uploads/logo.png" : (System.IO.File.Exists(logoPathJpg) ? "/uploads/logo.jpg" : "/icon.png");
    var diagnosticsModel = ViewBag.DiagnosticsModel as FormationManager.Models.SystemDiagnosticsViewModel;
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<!-- Navigation par onglets -->
<ul class="nav nav-tabs mb-4" id="settingsTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="general-tab" data-bs-toggle="tab" data-bs-target="#general" type="button" role="tab" aria-controls="general" aria-selected="true">
            <i class="fas fa-cog me-2"></i> Général
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="diagnostics-tab" data-bs-toggle="tab" data-bs-target="#diagnostics" type="button" role="tab" aria-controls="diagnostics" aria-selected="false">
            <i class="fas fa-tools me-2"></i> Diagnostic système
        </button>
    </li>
</ul>

<!-- Contenu des onglets -->
<div class="tab-content" id="settingsTabContent">
    <!-- Onglet Général -->
    <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">

<div class="card mb-4">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">Sites</h6>
    </div>
    <div class="card-body">
        <form asp-action="AddSite" method="post" class="row g-2 mb-3">
            @Html.AntiForgeryToken()
            <div class="col-md-3">
                <input name="siteId" class="form-control" placeholder="SiteId (ex: SITE_06)" />
            </div>
            <div class="col-md-4">
                <input name="name" class="form-control" placeholder="Nom du site" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-outline-primary w-100">
                    <i class="fas fa-plus"></i> Ajouter un site
                </button>
            </div>
            <div class="col-md-2">
                <a asp-action="ExportSites" class="btn btn-outline-secondary w-100">
                    <i class="fas fa-file-export"></i> Export CSV
                </a>
            </div>
        </form>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                <tr>
                    <th>SiteId</th>
                    <th>Nom</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var site in Model.Sites)
                {
                    <tr>
                        <td>@site.SiteId</td>
                        <td>
                            <form asp-action="RenameSite" method="post" class="d-flex gap-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="siteId" value="@site.SiteId" />
                                <input name="name" class="form-control form-control-sm" value="@site.Name" />
                                <button class="btn btn-sm btn-outline-secondary" type="submit">
                                    Renommer
                                </button>
                            </form>
                        </td>
                        <td>@(site.IsActive ? "Actif" : "Inactif")</td>
                        <td>
                            <div class="d-flex gap-2">
                                <form asp-action="ToggleSite" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="siteId" value="@site.SiteId" />
                                    <button class="btn btn-sm btn-outline-warning" type="submit">
                                        @(site.IsActive ? "Désactiver" : "Réactiver")
                                    </button>
                                </form>
                                <form asp-action="DeleteSite" method="post" class="d-flex gap-1">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="siteId" value="@site.SiteId" />
                                    <select name="transferToSiteId" class="form-select form-select-sm" style="min-width: 150px;">
                                        <option value="">-- Transfert (si données) --</option>
                                        @foreach (var target in Model.Sites.Where(s => s.SiteId != site.SiteId))
                                        {
                                            <option value="@target.SiteId">@target.Name</option>
                                        }
                                    </select>
                                    <button class="btn btn-sm btn-outline-danger" type="submit" 
                                            onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce site ?' + (@Model.Sites.Count > 1 ? ' Si le site contient des données, elles seront transférées vers le site sélectionné.' : ''))">
                                        Supprimer
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">Utilisateurs</h6>
    </div>
    <div class="card-body">
        <form asp-action="CreateUser" method="post" class="row g-2 mb-3">
            @Html.AntiForgeryToken()
            <div class="col-md-3">
                <input name="Email" class="form-control" placeholder="Email" />
            </div>
            <div class="col-md-2">
                <input name="Nom" class="form-control" placeholder="Nom" />
            </div>
            <div class="col-md-2">
                <input name="Prenom" class="form-control" placeholder="Prénom" />
            </div>
            <div class="col-md-2">
                <select name="Role" class="form-select">
                    <option value="@FormationManager.Models.RoleUtilisateur.Administrateur">Administrateur</option>
                    <option value="@FormationManager.Models.RoleUtilisateur.ResponsableSite">Responsable de site</option>
                    <option value="@FormationManager.Models.RoleUtilisateur.ResponsableFormation">Responsable formation</option>
                </select>
                <small class="text-muted d-block mt-1">
                    <i class="fas fa-info-circle"></i> Pour créer un formateur, utilisez l'onglet <a href="/Formateurs/Create" class="alert-link">Formateurs</a> dans le menu
                </small>
            </div>
            <div class="col-md-2">
                <select name="SiteId" class="form-select" id="newUserSiteId">
                    <option value="">-- Site (optionnel pour admin) --</option>
                    @foreach (var site in Model.Sites)
                    {
                        <option value="@site.SiteId">@site.Name</option>
                    }
                </select>
                <small class="text-muted">Non requis pour Administrateur</small>
            </div>
            <div class="col-md-2">
                <input name="Password" type="password" class="form-control" placeholder="Mot de passe" required minlength="8" />
                <small class="text-muted">Min 8 car., 1 majuscule, 1 minuscule, 1 chiffre</small>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100">Créer</button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Rôle</th>
                    <th>Site</th>
                    <th>Actif</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var user in Model.Users)
                {
                    var siteLabel = siteNames.ContainsKey(user.SiteId) ? siteNames[user.SiteId] : user.SiteId;
                    <tr>
                        <td>@user.Prenom @user.Nom</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>@(string.IsNullOrWhiteSpace(siteLabel) ? "-" : siteLabel)</td>
                        <td>@(user.Actif ? "Oui" : "Non")</td>
                        <td>
                            <div class="d-flex flex-column gap-2">
                                <form asp-action="UpdateUser" method="post" class="d-flex gap-2">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <select name="role" class="form-select form-select-sm">
                                        <option value="@FormationManager.Models.RoleUtilisateur.Administrateur" selected="@(user.Role == FormationManager.Models.RoleUtilisateur.Administrateur)">Administrateur</option>
                                        <option value="@FormationManager.Models.RoleUtilisateur.ResponsableSite" selected="@(user.Role == FormationManager.Models.RoleUtilisateur.ResponsableSite)">Responsable de site</option>
                                        <option value="@FormationManager.Models.RoleUtilisateur.Formateur" selected="@(user.Role == FormationManager.Models.RoleUtilisateur.Formateur)">Formateur</option>
                                        <option value="@FormationManager.Models.RoleUtilisateur.ResponsableFormation" selected="@(user.Role == FormationManager.Models.RoleUtilisateur.ResponsableFormation)">Responsable formation</option>
                                    </select>
                                    <select name="siteId" class="form-select form-select-sm">
                                        <option value="">-- Site --</option>
                                        @foreach (var site in Model.Sites)
                                        {
                                            <option value="@site.SiteId" selected="@(user.SiteId == site.SiteId)">@site.Name</option>
                                        }
                                    </select>
                                    <select name="actif" class="form-select form-select-sm">
                                        <option value="true" selected="@user.Actif">Actif</option>
                                        <option value="false" selected="@(user.Actif == false)">Inactif</option>
                                    </select>
                                    <button class="btn btn-sm btn-outline-secondary" type="submit">Mettre à jour</button>
                                </form>
                                <form asp-action="ResetUserPassword" method="post" class="d-flex gap-2">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <input name="newPassword" type="password" class="form-control form-control-sm" placeholder="Nouveau mot de passe" />
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Reset MDP</button>
                                </form>
                                <form asp-action="DeleteUser" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Supprimer</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">Paramètres techniques</h6>
    </div>
    <div class="card-body">
        <form asp-action="UpdateSyncSettings" method="post" class="row g-2 mb-3">
            @Html.AntiForgeryToken()
            <div class="col-md-3">
                <label class="form-label">Site courant</label>
                <select name="siteId" class="form-select">
                    @foreach (var site in Model.Sites)
                    {
                        <option value="@site.SiteId" selected="@(site.SiteId == Model.CurrentSiteId)">@site.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-5">
                <label class="form-label">Serveur central</label>
                <input name="centralUrl" class="form-control" value="@Model.CentralUrl" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Intervalle (min)</label>
                <input name="intervalMinutes" type="number" min="1" class="form-control" value="@Model.SyncIntervalMinutes" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary w-100">Enregistrer</button>
            </div>
