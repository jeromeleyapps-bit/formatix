        <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-secondary">
            <i class="fas fa-sign-out-alt"></i> Déconnexion
        </a>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">Paramètres de l'organisme</h6>
    </div>
    <div class="card-body">
        <form asp-action="UpdateOrganizationSettings" method="post" class="row g-2">
            @Html.AntiForgeryToken()
            <div class="col-12">
                <label class="form-label">URL publique (inscription en ligne)</label>
                <input name="BaseUrlInscription" class="form-control font-monospace" placeholder="Ex. https://xxx.trycloudflare.com (vide = localhost)" value="@Model.Organization.BaseUrlInscription" />
                <small class="form-text text-muted">Lien et QR code pointent vers cette URL. À renseigner si vous utilisez un tunnel (Cloudflare, ngrok…) ou un domaine en production. Voir SOLUTIONS_ACCES_DISTANCE_INSCRIPTION.md.</small>
            </div>
            <div class="col-md-4">
                <input name="NomOrganisme" class="form-control" placeholder="Nom organisme" value="@Model.Organization.NomOrganisme" />
            </div>
            <div class="col-md-4">
                <input name="SIRET" class="form-control" placeholder="SIRET" value="@Model.Organization.SIRET" />
            </div>
            <div class="col-md-4">
                <input name="Email" class="form-control" placeholder="Email" value="@Model.Organization.Email" />
            </div>
            <div class="col-md-4">
                <input name="Telephone" class="form-control" placeholder="Téléphone" value="@Model.Organization.Telephone" />
            </div>
            <div class="col-md-4">
                <input name="Adresse" class="form-control" placeholder="Adresse" value="@Model.Organization.Adresse" />
            </div>
            <div class="col-md-2">
                <input name="CodePostal" class="form-control" placeholder="Code postal" value="@Model.Organization.CodePostal" />
            </div>
            <div class="col-md-2">
                <input name="Ville" class="form-control" placeholder="Ville" value="@Model.Organization.Ville" />
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-primary w-100" type="submit">Enregistrer</button>
            </div>
        </form>
        
        <!-- Section Logo -->
        <div class="mt-4 pt-4 border-top">
            <h6 class="mb-3">Logo de l'organisme</h6>
            <p class="text-muted small mb-3">Le logo sera utilisé dans l'interface et sur tous les PDF générés (catalogue, BPF, évaluations). Formats acceptés : PNG, JPG (max 5MB).</p>
            
            <div class="row align-items-center">
                <div class="col-md-4">
                    @if (hasLogo)
                    {
                        <div class="mb-3">
                            <img src="@logoUrl" alt="Logo" class="img-thumbnail" style="max-height: 150px; max-width: 100%;" />
                            <p class="small text-muted mt-2">Logo actuel</p>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3 p-3 border rounded bg-light text-center">
                            <i class="fas fa-image fa-3x text-muted mb-2"></i>
                            <p class="small text-muted mb-0">Aucun logo uploadé</p>
                        </div>
                    }
                </div>
                <div class="col-md-8">
                    <form asp-action="UploadLogo" method="post" enctype="multipart/form-data" class="mb-3">
                        @Html.AntiForgeryToken()
                        <div class="input-group">
                            <input type="file" name="logoFile" class="form-control" accept=".png,.jpg,.jpeg" required />
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-upload"></i> Uploader
                            </button>
                        </div>
                        <small class="form-text text-muted">PNG ou JPG, max 5MB</small>
                    </form>
                    @if (hasLogo)
                    {
                        <form asp-action="DeleteLogo" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer le logo ?');">
                                <i class="fas fa-trash"></i> Supprimer le logo
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">Paramètres Qualiopi</h6>
    </div>
    <div class="card-body">
        <form asp-action="UpdateQualiopiSettings" method="post" class="row g-2">
            @Html.AntiForgeryToken()
            <div class="col-md-2">
                <label class="form-label">Certification</label>
                <select name="Certification" class="form-select">
                    <option value="true" selected="@(Model.Qualiopi.Certification)">Oui</option>
                    <option value="false" selected="@(Model.Qualiopi.Certification == false)">Non</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Numéro</label>
                <input name="NumeroCertification" class="form-control" value="@Model.Qualiopi.NumeroCertification" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Date certif</label>
                <input name="DateCertification" class="form-control" value="@Model.Qualiopi.DateCertification" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Prochaine éval</label>
                <input name="DateProchaineEvaluation" class="form-control" value="@Model.Qualiopi.DateProchaineEvaluation" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Organisme</label>
                <input name="OrganismeCertificateur" class="form-control" value="@Model.Qualiopi.OrganismeCertificateur" />
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-primary w-100" type="submit">Enregistrer</button>
            </div>
        </form>
    </div>
</div>

    </div>
    
    <!-- Onglet Diagnostic système -->
    <div class="tab-pane fade" id="diagnostics" role="tabpanel" aria-labelledby="diagnostics-tab">
        @if (diagnosticsModel != null)
        {
            @if (diagnosticsModel.HasWarnings)
            {
                <div class="alert alert-warning">
                    <h6 class="fw-bold mb-2"><i class="fas fa-exclamation-triangle me-1"></i> Points à surveiller</h6>
                    <ul class="mb-0">
                        @foreach (var w in diagnosticsModel.Warnings)
                        {
                            <li>@w</li>
                        }
                    </ul>
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle me-1"></i> Aucun problème majeur détecté. La configuration semble correcte.
                </div>
            }

            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="m-0 fw-bold">Base de données</h6>
                </div>
                <div class="card-body">
                    <p class="mb-1">
                        <strong>Connexion :</strong>
                        @if (diagnosticsModel.DatabaseCanConnect)
                        {
                            <span class="badge bg-success">OK</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Échec</span>
                            <span class="text-muted ms-2">@diagnosticsModel.DatabaseError</span>
                        }
                    </p>
                    <p class="mb-1"><strong>Fichier SQLite :</strong> <code>@diagnosticsModel.DatabasePath</code></p>
                    <p class="mb-0">
                        <strong>Statut du fichier :</strong>
                        @if (diagnosticsModel.DatabaseFileExists)
                        {
                            <span class="badge bg-success">Présent</span>
                            if (diagnosticsModel.DatabaseFileSizeBytes.HasValue)
                            {
                                var sizeMb = diagnosticsModel.DatabaseFileSizeBytes.Value / (1024d * 1024d);
                                <span class="text-muted ms-2">(@sizeMb.ToString("F1") Mo)</span>
                            }
                        }
                        else
                        {
                            <span class="badge bg-danger">Introuvable</span>
                        }
                    </p>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="m-0 fw-bold">Fichiers et espace disque</h6>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>Racine application :</strong> <code>@diagnosticsModel.ContentRootPath</code></p>
                    <p class="mb-2">
                        <strong>Espace disque libre (approx.) :</strong>
                        @if (diagnosticsModel.ContentRootFreeSpaceBytes.HasValue)
                        {
                            var freeGb = diagnosticsModel.ContentRootFreeSpaceBytes.Value / (1024d * 1024d * 1024d);
                            <span>@freeGb.ToString("F1") Go libres</span>
                        }
                        else
                        {
                            <span class="text-muted">Non déterminé</span>
                        }
                    </p>
                    <div class="row">
                        <div class="col-md-4 mb-2">
                            <div><strong>Dossier uploads</strong></div>
                            <div><code>@diagnosticsModel.UploadsPath</code></div>
                            <div>
                                @if (diagnosticsModel.UploadsFolderOk)
                                {
                                    <span class="badge bg-success">Accessible</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inaccessible</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div><strong>Dossier exemples</strong></div>
                            <div><code>@diagnosticsModel.ExamplesPath</code></div>
                            <div>
                                @if (diagnosticsModel.ExamplesFolderOk)
                                {
                                    <span class="badge bg-success">Accessible</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inaccessible</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-4 mb-2">
                            <div><strong>Dossier generated</strong></div>
                            <div><code>@diagnosticsModel.GeneratedPath</code></div>
                            <div>
                                @if (diagnosticsModel.GeneratedFolderOk)
                                {
                                    <span class="badge bg-success">Accessible</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inaccessible</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="m-0 fw-bold">Inscriptions à distance</h6>
                </div>
                <div class="card-body">
                    <p class="mb-1">
                        <strong>BaseUrlInscription :</strong>
                        @if (diagnosticsModel.BaseUrlInscriptionConfigured)
                        {
                            <code>@diagnosticsModel.BaseUrlInscription</code>
                        }
                        else
                        {
                            <span class="text-muted">Non configuré (l'application utilisera l'URL courante du serveur)</span>
                        }
                    </p>
                    <p class="mb-0">
                        <strong>URL publique valide :</strong>
                        @if (diagnosticsModel.BaseUrlInscriptionConfigured && diagnosticsModel.BaseUrlInscriptionLooksPublic)
                        {
                            <span class="badge bg-success">Oui</span>
                        }
                        else if (diagnosticsModel.BaseUrlInscriptionConfigured)
                        {
                            <span class="badge bg-warning text-dark">À vérifier</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Par défaut</span>
                        }
                    </p>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="m-0 fw-bold">Multi-sites / Sync</h6>
                </div>
                <div class="card-body">
                    <p class="mb-1">
                        <strong>Sync:SiteId :</strong>
                        @if (diagnosticsModel.SyncSiteIdDefined)
                        {
                            <code>@diagnosticsModel.SyncSiteId</code>
                        }
                        else
                        {
                            <span class="text-muted">Non défini</span>
                        }
                    </p>
                    <p class="mb-0">
                        <strong>Référencé dans la liste des sites :</strong>
                        @if (diagnosticsModel.SyncSiteIdDefined && diagnosticsModel.SyncSiteIdKnownInSites)
                        {
                            <span class="badge bg-success">Oui</span>
                        }
                        else if (diagnosticsModel.SyncSiteIdDefined)
                        {
                            <span class="badge bg-warning text-dark">Non (à vérifier)</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Non applicable</span>
                        }
                    </p>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-1"></i> Impossible de charger les informations de diagnostic.
            </div>
        }
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const roleSelect = document.querySelector('form[asp-action="CreateUser"] select[name="Role"]');
    const siteSelect = document.getElementById('newUserSiteId');
    
    if (roleSelect && siteSelect) {
        function updateSiteField() {
            // Administrateur = valeur 2 dans l'enum (Formateur=0, ResponsableFormation=1, Administrateur=2, ResponsableSite=3)
            const selectedOption = roleSelect.options[roleSelect.selectedIndex];
            const isAdmin = roleSelect.value === '2' || selectedOption.textContent.trim() === 'Administrateur';
            siteSelect.disabled = isAdmin;
            if (isAdmin) {
                siteSelect.value = '';
            }
        }
        
        roleSelect.addEventListener('change', updateSiteField);
        updateSiteField(); // Initial state
    }
});
</script>
