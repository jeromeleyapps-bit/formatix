@model FormationManager.Models.Client
@{
    ViewData["Title"] = "Nouveau client";
}

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @if (ViewBag.Sites != null)
            {
                <div class="mb-3">
                    <label class="form-label">Site</label>
                    <select asp-for="SiteId" class="form-select"
                            asp-items="@(new SelectList(ViewBag.Sites, "SiteId", "Name"))">
                    </select>
                </div>
            }
            <div class="mb-3">
                <label asp-for="Nom" class="form-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TypeClient" class="form-label"></label>
                <select asp-for="TypeClient" class="form-select" asp-items="Html.GetEnumSelectList<FormationManager.Models.TypeClient>()"></select>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Telephone" class="form-label"></label>
                    <input asp-for="Telephone" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Adresse" class="form-label"></label>
                    <input asp-for="Adresse" class="form-control" />
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="CodePostal" class="form-label"></label>
                    <input asp-for="CodePostal" class="form-control" />
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="Ville" class="form-label"></label>
                    <input asp-for="Ville" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="SIRET" class="form-label"></label>
                    <input asp-for="SIRET" class="form-control" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="NumeroOPCA" class="form-label"></label>
                    <input asp-for="NumeroOPCA" class="form-control" />
                </div>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>
