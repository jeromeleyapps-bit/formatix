@model IEnumerable<FormationManager.Models.Client>
@{
    ViewData["Title"] = "Clients";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Clients</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Nouveau client
    </a>
</div>

<div class="card">
    <div class="card-header">
        <h6 class="m-0 font-weight-bold text-primary">Liste des clients</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                <tr>
                    @if (ViewBag.ShowSite == true)
                    {
                        <th>Site</th>
                    }
                    <th>Nom</th>
                    <th>Type</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Ville</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        @if (ViewBag.ShowSite == true)
                        {
                            var siteNames = ViewBag.SiteNames as Dictionary<string, string>;
                            var siteLabel = siteNames != null && siteNames.ContainsKey(client.SiteId)
                                ? siteNames[client.SiteId]
                                : client.SiteId;
                            <td>@siteLabel</td>
                        }
                        <td>@client.Nom</td>
                        <td>@client.TypeClient</td>
                        <td>@client.Email</td>
                        <td>@client.Telephone</td>
                        <td>@client.Ville</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
